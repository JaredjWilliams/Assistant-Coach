<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.runningtimer.ui.home.HomeFragment"
        android:label="@string/title_timer"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.example.runningtimer.ui.dashboard.DashboardFragment"
        android:label="@string/title_profiles"
        tools:layout="@layout/fragment_dashboard" />

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.example.runningtimer.ui.notifications.NotificationsFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_notifications" />

    <activity
        android:id="@+id/navigation_timer"
        android:name="com.example.runningtimer.ui.timers.TimersActivity"
        android:label="Timer"
        tools:layout="@layout/activity_timers"/>

    <activity
        android:id="@+id/navigation_profiles"
        android:name="com.example.runningtimer.ui.profiles.ProfilesActivity"
        android:label="Profiles"
        tools:layout="@layout/activity_profiles"/>

</navigation>